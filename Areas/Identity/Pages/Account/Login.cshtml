@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<h1 class="registrera-login-h1">@ViewData["Title"]</h1>
    <div class="container">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">E-post</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Lösenord</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Kom ihåg mig
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary register-login-button">Logga in</button>
                </div>                
            </form>
        </section>
    </div>  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}