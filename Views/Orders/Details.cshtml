@model MoonSpace.Models.Orders

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Orderdetaljer</h1>

<div>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CostumerId)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Costumer" asp-action="Details" asp-route-id="@Model.CostumerId">@Html.DisplayFor(model => model.CostumerId)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paid)
        </dd>
    </dl>
</div>

@foreach (var item in ViewBag.product)
{
    <p><span class="font-weight-bold">Köpt kurs: </span>@item.ProductName</p>
    <p><span class="font-weight-bold">Pris att betala: </span>@item.ProductPrice kr</p>

}
<br />


<div>
    <a asp-action="Edit" asp-route-id="@Model.OrderID">Markera som betald</a> |
    <a asp-action="Index">Orderlistan</a>
</div>
