@model IEnumerable<MoonSpace.Models.Costumer>

@{
    ViewData["Title"] = "Kunder";
}

<h1>Kunder</h1>

<p class="float-right">
    <a asp-action="Create">Lägg till ny kund</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CostumerId">Redigera</a> |
                <a asp-action="Details" asp-route-id="@item.CostumerId">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.CostumerId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
